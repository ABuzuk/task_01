user_input = input("Введите номер месяца: ")

month = int(user_input)
if month > 12:
    print('Некорректный номер месяца!')

if month == 1:
    print(f'Вы ввели январь, в этом месяце 31 день!')
elif month == 2:
    print(f'Вы ввели февраль, в этом месяце 28 деней!')
elif month == 3:
    print(f'Вы ввели март, в этом месяце 31 день!')
elif month == 4:
    print(f'Вы ввели апрель, в этом месяце 30 деней!')
elif month == 5:
    print(f'Вы ввели май, в этом месяце 31 день!')
elif month == 6:
    print(f'Вы ввели июнь, в этом месяце 30 деней!')
elif month == 7:
    print(f'Вы ввели июль, в этом месяце 31 день!')
elif month == 8:
    print(f'Вы ввели август, в этом месяце 31 день!')
elif month == 9:
    print(f'Вы ввели сентябрь, в этом месяце 30 день!')
elif month == 10:
    print(f'Вы ввели октябрь, в этом месяце 31 день!')
elif month == 11:
    print(f'Вы ввели ноябрь, в этом месяце 30 день!')
elif month == 12:
    print(f'Вы ввели декабрь, в этом месяце 31 день!')
